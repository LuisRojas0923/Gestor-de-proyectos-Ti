{
  "backup_settings": {
    "database": {
      "enabled": true,
      "schedule": "daily",
      "retention_days": 7,
      "container_name": "gestor-de-proyectos-ti-db-1",
      "database_name": "project_manager",
      "username": "user"
    },
    "project": {
      "enabled": true,
      "schedule": "weekly",
      "retention_weeks": 4,
      "include_files": [
        "backend/app",
        "backend/alembic",
        "backend/*.py",
        "backend/*.txt",
        "backend/*.ini",
        "backend/*.sql",
        "backend/*.md",
        "backend/Dockerfile",
        "frontend/src",
        "frontend/public",
        "frontend/*.json",
        "frontend/*.js",
        "frontend/*.ts",
        "frontend/*.html",
        "frontend/Dockerfile",
        "docker-compose.yml",
        "*.md",
        "*.ps1"
      ],
      "exclude_patterns": [
        "node_modules",
        "__pycache__",
        "*.pyc",
        "*.log",
        "*.tmp",
        ".git",
        "dist",
        "build"
      ]
    },
    "storage": {
      "local_path": "./backups",
      "cloud_sync": {
        "enabled": false,
        "provider": "onedrive",
        "path": "Backups/Proyectos"
      }
    }
  },
  "restore_settings": {
    "database": {
      "container_name": "gestor-de-proyectos-ti-db-1",
      "database_name": "project_manager",
      "username": "user"
    },
    "project": {
      "target_path": ".",
      "backup_required": true
    }
  }
}
